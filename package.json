{
  "name": "dzutech.com",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prepare": "husky",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "verify:env": "node scripts/verify-env.mjs",
    "ci:local": "npm run verify:env && npm run lint && npm run test:all",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:server": "npm run test --prefix server",
    "test:all": "npm run test && npm run test:server",
    "preview": "vite preview"
  },
  "dependencies": {
    "dompurify": "^3.1.7",
    "framer-motion": "^12.23.22",
    "marked": "^15.0.11",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@eslint/markdown": "^7.3.0",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.36.0",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-yml": "^1.15.0",
    "globals": "^16.4.0",
    "husky": "^9.0.11",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx --max-warnings=0"
    ],
    "**/*.json": [
      "eslint --fix --max-warnings=0"
    ],
    "**/*.{yml,yaml}": [
      "eslint --fix --max-warnings=0"
    ],
    "**/*.md": [
      "eslint --fix --max-warnings=0"
    ]
  }
}